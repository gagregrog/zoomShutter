
{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "outDir": "build",
  },
  "include": ["src/**/*.ts"]
}
